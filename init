#!/bin/bash -x
baseDir=$(pwd)

mkdir ~/oldprof
mv  ~/.vim ~/oldprof/vim 2>/dev/null; ln -s $baseDir/vim ~/.vim
mv ~/.bashrc ~/oldprof/bashrc 2>/dev/null; ln -s $baseDir/bashrc  ~/.bashrc
mv ~/.vimrc ~/old_prof/.vimrc 2>/dev/null; ln -s $baseDir/vimrc ~/.vimrc

ln -s $baseDir/prompts/p1 ~/.prompt1
source ~/.bashrc
